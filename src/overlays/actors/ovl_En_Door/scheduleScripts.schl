        }
    }
    if_day (3) {
        if_since_time (13, 0) {
            not if_week_event_reg (WEEKEVENTREG_51_08) {
                return_s (0xC)
            } else if_since_time (22, 0) {
                return_s (0xC)
            } else {
                return_none
            }
        }
    }

    // Day 1
    return_s (0xC)
}

