// The Mayor's Residence: Main entrance
sDoorSch_MayorsResidenceMainEntrance {
    // Day 1 and 2: Open between 10:00 ~ 20:00
    // Day 3: Open since 10:00

    if_day (3) {
        if_since_time (10, 0) {
        open_residence:
            return_none
        } else {
            branch (closed_residence)
        }
    } else {
        if_time_range (10, 0, 20, 0) {
            branch (open_residence)
        } else {
        closed_residence:
            return_s (0x15)
        }
    }
}

